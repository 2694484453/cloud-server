<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="vip.gpg123.wallpaper.mapper.CloudWallpaperMapper">

    <resultMap id="BaseResultMap" type="vip.gpg123.wallpaper.domain.CloudWallpaper">
            <id property="id" column="id" />
            <result property="name" column="name" />
            <result property="tags" column="tags" />
            <result property="size" column="size" />
            <result property="createTime" column="create_time" />
            <result property="createBy" column="create_by" />
            <result property="updateTime" column="update_time" />
            <result property="updateBy" column="update_by" />
    </resultMap>

    <sql id="Base_Column_List">
        id,name,tags,size,create_time,create_by,
        update_time,update_by
    </sql>

    <!--条件语句-->
    <sql id="queryWrapper">
        <where>1=1
            <if test="qw.id != null">
                and id = #{qw.id}
            </if>
            <if test="qw.name != null and qw.name !=''">
                and name like concat('%',#{qw.name},'%')
            </if>
            <if test="qw.type != null and qw.type !=''">
                and type = #{qw.type}
            </if>
            <if test="qw.source != null and qw.source !=''">
                and source = #{qw.source}
            </if>
            <if test="qw.createBy != null">
                and a.create_by = #{qw.createBy}
            </if>
            <if test="qw.createBys != null and createBys.size() > 0">
                and a.create_by in
                <foreach item="item" collection="createBys" open="(" close=")" separator=",">
                    #{item}
                </foreach>
            </if>
            <if test="qw.updateBy != null and updateBys.size() > 0">
                and a.update_by = #{qw.updateBy}
            </if>
            <if test="qw.updateBys != null and updateBys.size() > 0">
                and a.update_by in
                <foreach item="item" collection="updateBys" open="(" close=")" separator=",">
                    #{item}
                </foreach>
            </if>
        </where>
    </sql>

    <!--分页-->
    <sql id="order">
        <!-- 排序放在where外面 -->
        <choose>
            <when test="page.orderByColumn != null and page.orderByColumn != '' and page.isAsc != null and page.isAsc != ''">
                order by ${page.orderByColumn} ${page.isAsc}
            </when>
            <otherwise>
                order by create_time desc
            </otherwise>
        </choose>
    </sql>

    <!--基础查询-->
    <sql id="baseSelect">
        select a.*, b.user_name as 'updateByUserName'
        from (select s.*, u.user_name as 'createByUserName'
              from cloud_wallpaper s
                       left join sys_user u on u.user_id = s.create_by) a
                 left join sys_user b on a.update_by = b.user_id
    </sql>

    <select id="list" resultMap="BaseResultMap">
        <include refid="baseSelect"/>
        <include refid="queryWrapper"/>
    </select>

    <!--单个查询-->
    <select id="one" resultMap="BaseResultMap">
        <include refid="baseSelect"/>
        <include refid="queryWrapper"/>
    </select>

    <!--分页查询-->
    <select id="page" resultMap="BaseResultMap">
        <include refid="baseSelect"/>
        <include refid="queryWrapper"/>
        <include refid="order"/>
        limit #{page.begin},#{page.end}
    </select>
</mapper>
