<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="vip.gpg123.prometheus.mapper.PrometheusGroupMapper">

    <resultMap id="BaseResultMap" type="vip.gpg123.prometheus.domain.PrometheusGroup">
        <id property="groupId" column="group_id"/>
        <result property="groupName" column="group_name"/>
        <result property="groupFilePath" column="group_file_path"/>
        <result property="evaluationTime" column="evaluation_time"/>
        <result property="lastEvaluation" column="last_evaluation"/>
        <result property="description" column="description"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="createBy" column="create_by"/>
        <result property="updateBy" column="update_by"/>
    </resultMap>

    <sql id="Base_Column_List">
        group_id,gourp_name,group_file_path,evaluation_time,last_evaluation,description,
        create_time,update_time,create_by,update_by
    </sql>

    <!--条件语句-->
    <sql id="queryWrapper">
        <where>1=1
            <if test="qw.groupId != null">
                and group_id = #{qw.groupId}
            </if>
            <if test="qw.groupName != null and qw.groupName !=''">
                and group_name like concat('%',#{qw.groupName},'%')
            </if>
            <if test="qw.createBy != null">
                and g.create_by = #{qw.createBy}
            </if>
            <if test="qw.updateBy != null">
                and g.update_by = #{qw.updateBy}
            </if>
        </where>
    </sql>

    <!--分页-->
    <sql id="order">
        <!-- 排序放在where外面 -->
        <choose>
            <when test="page.orderByColumn != null and page.orderByColumn != '' and page.isAsc != null and page.isAsc != ''">
                order by ${page.orderByColumn} ${page.isAsc}
            </when>
            <otherwise>
                order by create_time desc
            </otherwise>
        </choose>
    </sql>

    <!--基础查询-->
    <sql id="baseSelect">
        SELECT g.*,
               uu.user_name AS createByUserName,
               uc.user_name AS updateByUserName
        FROM prometheus_group g
                 LEFT JOIN sys_user uu ON g.create_by = uu.user_id
                 LEFT JOIN sys_user uc ON g.update_by = uc.user_id
    </sql>

    <select id="list" resultMap="BaseResultMap">
        <include refid="baseSelect"/>
        <include refid="queryWrapper"/>
    </select>

    <!--单个查询-->
    <select id="one" resultMap="BaseResultMap">
        <include refid="baseSelect"/>
        <include refid="queryWrapper"/>
    </select>

    <!--分页查询-->
    <select id="page" resultMap="BaseResultMap">
        <include refid="baseSelect"/>
        <include refid="queryWrapper"/>
        <include refid="order"/>
        limit #{page.limit} offset #{page.offset}
    </select>
</mapper>
