<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="vip.gpg123.tools.mapper.WebToolsMapper">

    <resultMap id="BaseResultMap" type="vip.gpg123.tools.domain.WebTools">
            <id property="id" column="id" />
            <result property="index" column="id" />
            <result property="name" column="name" />
            <result property="banner" column="banner" />
            <result property="type" column="type" />
            <result property="description" column="description" />
            <result property="isSetup" column="is_setup" />
            <result property="createTime" column="create_time"/>
            <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,banner,type,description,
        is_setup,create_time,update_time
    </sql>

    <!--条件语句-->
    <sql id="queryWrapper">
        <where>1=1
            <if test="qw.id != null">
                and id = #{qw.id}
            </if>
            <if test="qw.name != null and qw.name !=''">
                and name like concat('%',#{qw.name},'%')
            </if>
        </where>
    </sql>

    <sql id="baseSelect">
        SELECT wt.* from web_tools wt
    </sql>

    <!--list-->
    <select id="list" resultMap="BaseResultMap">
        <include refid="baseSelect"/>
        <include refid="queryWrapper"/>
    </select>

    <!--分页查询-->
    <select id="page" resultMap="BaseResultMap">
        <include refid="baseSelect"/>
        <include refid="queryWrapper"/>
    </select>
</mapper>
