<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="vip.gpg123.wallpaper.mapper.WallpaperUploadMapper">
    <resultMap id="BaseResultMap" type="vip.gpg123.wallpaper.domain.WallpaperUpload">
            <id property="id" column="id" />
            <result property="name" column="name" />
            <result property="size" column="size" />
            <result property="tags" column="tags" />
            <result property="url" column="url" />
            <result property="description" column="description" />
            <result property="createBy" column="create_by" />
            <result property="createTime" column="create_time" />
            <result property="updateBy" column="update_by" />
            <result property="updateTime" column="update_time" />
    </resultMap>

    <sql id="Base_Column_List">
        id,name,size,tags,url,description,
        create_by,create_time,update_by,update_time
    </sql>

    <!--条件语句-->
    <sql id="queryWrapper">
        <where>1=1
            <if test="qw.id != null">
                and id = #{qw.id}
            </if>
            <if test="qw.name != null and qw.name !=''">
                and name like concat('%',#{qw.name},'%')
            </if>
            <if test="qw.createBy != null">
                and wu.create_by = #{qw.createBy}
            </if>
            <if test="qw.createBys != null and createBys.size() > 0">
                and wu.create_by in
                <foreach item="item" collection="createBys" open="(" close=")" separator=",">
                    #{item}
                </foreach>
            </if>
            <if test="qw.updateBy != null and updateBys.size() > 0">
                and wu.update_by = #{qw.updateBy}
            </if>
            <if test="qw.updateBys != null and updateBys.size() > 0">
                and wu.update_by in
                <foreach item="item" collection="updateBys" open="(" close=")" separator=",">
                    #{item}
                </foreach>
            </if>
        </where>
    </sql>

    <!--分页-->
    <sql id="order">
        <!-- 排序放在where外面 -->
        <choose>
            <when test="page.orderByColumn != null and page.orderByColumn != '' and page.isAsc != null and page.isAsc != ''">
                order by ${page.orderByColumn} ${page.isAsc}
            </when>
            <otherwise>
                order by create_time desc
            </otherwise>
        </choose>
    </sql>

    <!--基础查询-->
    <sql id="baseSelect">
        SELECT wu.*,
               uc.user_name AS createByUserName,
               uu.user_name AS updateByUserName
        FROM `wallpaper`.wallpaper_upload wu
                 LEFT JOIN `cloud-server`.sys_user uc ON wu.create_by = uc.user_id
                 LEFT JOIN `cloud-server`.sys_user uu ON wu.update_by = uu.user_id
    </sql>

    <select id="list" resultMap="BaseResultMap">
        <include refid="baseSelect"/>
        <include refid="queryWrapper"/>
    </select>

    <!--单个查询-->
    <select id="one" resultMap="BaseResultMap">
        <include refid="baseSelect"/>
        <include refid="queryWrapper"/>
    </select>

    <!--分页查询-->
    <select id="page" resultMap="BaseResultMap">
        <include refid="baseSelect"/>
        <include refid="queryWrapper"/>
        <include refid="order"/>
        limit #{page.limit} offset #{page.offset}
    </select>
</mapper>
