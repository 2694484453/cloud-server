<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="vip.gpg123.wallpaper.mapper.UserPromptMapper">

    <resultMap id="BaseResultMap" type="vip.gpg123.wallpaper.domain.UserPrompt">
            <id property="id" column="id" />
            <result property="promptName" column="prompt_name" />
            <result property="prompt" column="prompt" />
            <result property="negativePrompt" column="negative_prompt" />
            <result property="description" column="description" />
            <result property="createBy" column="create_by" />
            <result property="createTime" column="create_time" />
            <result property="updateBy" column="update_by" />
            <result property="updateTime" column="update_time" />
    </resultMap>

    <sql id="Base_Column_List">
        id,prompt_name,prompt,negative_prompt,description,create_by,
        create_time,update_by,update_time
    </sql>

    <!--条件语句-->
    <sql id="queryWrapper">
        <where>1=1
            <if test="qw.id != null">
                and id = #{qw.id}
            </if>
            <if test="qw.promptName != null and qw.promptName !=''">
                and prompt_name like concat('%',#{qw.promptName},'%')
            </if>
            <if test="qw.createBy != null">
                and a.create_by = #{qw.createBy}
            </if>
            <if test="qw.updateBy != null">
                and a.update_by = #{qw.updateBy}
            </if>
        </where>
    </sql>

    <!--基础查询-->
    <sql id="baseSelect">
        SELECT up.*,
               uc.user_name AS createByUserName,
               uu.user_name AS updateByUserName
        FROM user_prompt up
                 LEFT JOIN sys_user uc ON up.create_by = uc.user_id
                 LEFT JOIN sys_user uu ON up.update_by = uu.user_id
    </sql>

    <select id="list" resultMap="BaseResultMap">
        <include refid="baseSelect"/>
        <include refid="queryWrapper"/>
    </select>

    <!--单个查询-->
    <select id="one" resultMap="BaseResultMap">
        <include refid="baseSelect"/>
        <include refid="queryWrapper"/>
    </select>

    <!--分页查询-->
    <select id="page" resultMap="BaseResultMap">
        <include refid="baseSelect"/>
        <include refid="queryWrapper"/>
    </select>
</mapper>
