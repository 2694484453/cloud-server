<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="vip.gpg123.wallpaper.mapper.WallpaperKeywordMapper">

    <resultMap id="BaseResultMap" type="vip.gpg123.wallpaper.domain.WallpaperKeyword">
            <id property="id" column="id" />
            <result property="keywordName" column="keyword_name" />
            <result property="keywordColor" column="keyword_color" />
            <result property="description" column="description" />
            <result property="createTime" column="create_time" />
            <result property="createBy" column="create_by" />
            <result property="updateTime" column="update_time" />
            <result property="updateBy" column="update_by" />
    </resultMap>

    <sql id="Base_Column_List">
        id,keyword_name,keyword_color,description,create_time,create_by,
        update_time,update_by
    </sql>

    <!-- 3. 随机查询SQL（关键：使用RAND() + 限制数量） -->
    <select id="randomList" resultMap="BaseResultMap">
        select * from wallpaper_keyword
        ORDER BY RAND()
        LIMIT #{count}
    </select>
</mapper>
