<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="vip.gpg123.nas.mapper.NasFrpClientMapper">

    <resultMap id="BaseResultMap" type="vip.gpg123.nas.domain.NasFrpClient">
            <id property="id" column="id" />
            <result property="name" column="name" />
            <result property="type" column="type" />
            <result property="localIp" column="local_ip" />
            <result property="localPort" column="local_port" />
            <result property="customDomains" column="custom_domains" />
            <result property="status" column="status" />
            <result property="description" column="description" />
            <result property="createBy" column="create_by" />
            <result property="createTime" column="create_time" />
            <result property="updateBy" column="update_by" />
            <result property="updateTime" column="update_time" />
    </resultMap>

    <sql id="Base_Column_List">
        id,name,type,local_ip,local_port,custom_domains,
        status,description,create_by,create_time,update_by,
        update_time
    </sql>

    <!--条件语句-->
    <sql id="queryWrapper">
        <where>1=1
            <if test="qw.id != null">
                and id = #{qw.id}
            </if>
        </where>
    </sql>

    <!--分页-->
    <sql id="order">
        <!-- 排序放在where外面 -->
        <choose>
            <when test="page.orderByColumn != null and page.orderByColumn != '' and page.isAsc != null and page.isAsc != ''">
                order by ${page.orderByColumn} ${page.isAsc}
            </when>
            <otherwise>
                order by create_time desc
            </otherwise>
        </choose>
    </sql>

    <!--基础查询-->
    <sql id="baseSelect">
        select a.*, b.user_name as 'updateByUserName'
        from (select s.*, u.user_name as 'createByUserName'
              from nas_frp_client s
                       left join sys_user u on u.user_id = s.create_by) a
                 left join sys_user b on a.update_by = b.user_id
    </sql>

    <select id="selectList" resultMap="BaseResultMap">
        <include refid="baseSelect"/>
        <include refid="queryWrapper"/>
    </select>

    <!--单个查询-->
    <select id="selectOne" resultMap="BaseResultMap">
        <include refid="baseSelect"/>
        <include refid="queryWrapper"/>
    </select>

    <!--分页查询-->
    <select id="page" resultMap="BaseResultMap">
        <include refid="baseSelect"/>
        <include refid="queryWrapper"/>
        <include refid="order"/>
        limit #{page.begin},#{page.end}
    </select>
</mapper>
